    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.0",
    "osrm": "^5.19.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "standard-version": "^5.0.0",
    "tape": "^4.9.1"
